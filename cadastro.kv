Screen:
    name: "cadastro"
           
    FloatLayout:
        MDIconButton:
            icon: "arrow-collapse-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
         
        MDTextField:
            id: name
            hint_text: "nome completo"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.83}
        MDTextField:
            on_touch_down: if self.collide_point(*args[1].pos): app.show_date_picker()
            id: birth
            hint_text: "nascimento dd/mm/yy"
            icon_right: "calendar"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.73}
        MDTextField:
            id: pnum
            hint_text: "celular"
            icon_right: "cellphone"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.63}
        MDTextField:
            id: mail
            validator: "email"
            hint_text: "e-mail"
            icon_right: "mail"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.53}                  
        MDTextField:
            id: user
            hint_text: "nome de usu√°rio"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}

        MDTextField:
            id: password
            hint_text: "senha"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.33}
            

        MDTextField:
            id: password_confirm
            hint_text: "coonfirme sua senha"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.23}

        MDFillRoundFlatButton:
            text: "CADASTRAR"
            font_size: 12
            pos_hint: {'center_x': 0.5, 'center_y': 0.13}
            on_press: 
                if app.envia_dados_firebase(name.text, mail.text, pnum.text, password.text, user.text, birth.text): Snackbar(text="Cadastrado com Sucesso!").open()

        Widget:
            size_hint_y: None
            height: 10
