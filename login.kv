#:import Snackbar kivymd.uix.snackbar.Snackbar
Screen:
    name: "login"
                     
    FloatLayout:

        MDLabel:
            pos_hint: {'center_x': 0.5, 'center_y': 0.86}
            id: welcome_label
            text: "WSOL"
            font_size: 50
            halign: 'center'
            size_hint_y: None
            font_name: "Kumbh Sans"
        MDLabel:
            font_name: "Kumbh Sans"
            text: 'Wagner soluções'
            pos_hint: {'center_x': 0.5, 'center_y': 0.80}
            size_hint_x: None
            width: self.texture_size[0]
            text_size: None, None
        MDTextField:
            id: user
            validator: "email"
            hint_text: "email"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.63}

        MDTextField:
            id: passw
            hint_text: "senha"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x': 0.5, 'center_y': 0.53}
            password: True 

        

        MDFillRoundFlatButton:
            font_name: "Kumbh Sans"
            text: "LOG IN"
            font_size: 12
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
            on_press:
                print(f"{passw.text}")
                #app.testando()
                app.verifica_dados_firebase(user.text, passw.text) 
        MDLabel:
            font_name: "Kumbh Sans"
            text: 'Não tem cadastro?'
            pos_hint: {'center_x': 0.5, 'center_y': 0.19}
            size_hint_x: None
            width: self.texture_size[0]
            text_size: None, None

        MDTextButton:
            font_name: "Kumbh Sans"
            text: "Clique aqui"
            font_size: 12
            pos_hint: {'center_x': 0.5, 'center_y': 0.13}
            on_press:
                app.root.current = "cadastro"
                root.manager.transition.direction = "left"

        Widget:
            size_hint_y: None
            height: 10
