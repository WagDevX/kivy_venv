#:import Snackbar kivymd.uix.snackbar.Snackbar
Screen:
    name: "login"
                     
    FloatLayout:

        Image:
            source: "logo-no-background.png"
            pos_hint: {'center_x': 0.5, 'center_y': 0.76}
            id: welcome_label
            halign: 'center'
            size_hint_x: "0.8"
        MDTextField:
            id: user
            validator: "email"
            hint_text: "email"
            icon_right: "account"
            size_hint_x: "0.8"
            font_size: "18sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.63}

        MDTextField:
            id: passw
            hint_text: "senha"
            icon_right: "eye-off"
            size_hint_x: "0.8"
            font_size: "18sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.53}
            password: True

        

        MDFillRoundFlatButton:
            text: "LOG IN"
            size_hint_x:"0.8"
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
            on_press:
                app.verifica_dados_firebase(user.text, passw.text) 
        MDLabel:
            text: 'NÃ£o tem cadastro?'
            pos_hint: {'center_x': .5, 'center_y': 0.19}
            halign: 'center'
            font_size: self.width*0.05 + self.height*0.05
            size_hint_y: None
            text_size: (self.width, None)
        MDTextButton:
            text: "Clique aqui"
            font_size: "25sp"
            pos_hint: {'center_x': .5, 'center_y': 0.13}
            on_press:
                app.root.current = "cadastro"
                root.manager.transition.direction = "left"
