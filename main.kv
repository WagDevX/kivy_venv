                orientation: "vertical"
                MDTabs:
                    font_name: "Kumbh Sans"
                    id: tabs
                    Tab:
                        title: "Tarefas"
                        icon: "facebook-workplace"
                        MDLabel:
                            id: welcome
                            text: "Bem vindo! {}" 
                            halign: 'center'
                            color: 'blue' 
                            font_name: "Kumbh Sans" 
                            opacity: 0.0
                        MDScrollView:

                            MDGridLayout:
                                padding: dp(10)
                                id: box
                                cols: 1
                                adaptive_height: True
                                ThreeLineRightIconListItem:
                                    text: "Título da tarefa"
                                    secondary_text: "Ninguém fazendoo"
                                    tertiary_text: "Proridade alta"

                                    IconRightWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                                TwoLineIconListItem:
                                    text: "Título da tarefa2"
                                    secondary_text: "Ninguém fazendo"

                                    IconLeftWidget:
                                        icon: "note-search-outline"
                        
                        MDBoxLayout:
                            id: box
                            spacing: "56dp"
                            adaptive_size: True
                            pos_hint: {"center_x": .83, "center_y": .10}
                            MDFloatingActionButton:
                                elevation: 0
                                icon: "plus-thick"
                                theme_icon_color: "Custom"
                                md_bg_color: "#fefbff"
                                text_color: "#6851a5"
                                on_press:
                                    root.manager.transition = SwapTransition()
                                    root.manager.current = "tasks"
                                    root.manager.transition = SlideTransition()
