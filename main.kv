                        title: "Iventário"
                        icon: "counter"
                    Tab:
                        title: "Validade"
                        icon: "note-minus-outline"

                

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Busca'
            icon: 'book-search'

            ScreenListItems
            

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Perfil'
            icon: "account-box"
            MDBoxLayout:
                orientation: "vertical"
                MDTabs:
                    id: tabs
                    Tab:
                        title: "Meus dados"
                        icon: "account-box"
                        FloatLayout:
                
                            MDTextField:
                                #mode: "rectangle"
                                text: "teste"
                                font_name: "Kumbh Sans"
                                id: name
                                hint_text: "nome completo"
