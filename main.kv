                                width: 200
                                font_size: 15
                                pos_hint: {'center_x': 0.5, 'center_y': 0.60}
                                disabled: True
                            MDTextField:
                                #mode: "rectangle"
                                text: "teste"
                                font_name: "Kumbh Sans"
                                id: mail
                                hint_text: "e-mail"
                                icon_right: "mail"
                                size_hint_x: None
                                width: 200
                                font_size: 15
                                pos_hint: {'center_x': 0.5, 'center_y': 0.50}
                                disabled: True                  
                            MDTextField:
                                #mode: "rectangle"
                                font_name: "Kumbh Sans"
