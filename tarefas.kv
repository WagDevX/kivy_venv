#:import envia_tarefas_firebase tarefas.envia_tarefas_firebase
Tarefas:
    name: 'tasks_send'
    FloatLayout:
        MDIconButton:
            icon: "arrow-collapse-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            id: resp
            text: "Ninguém"
            opacity: 0.0                     
        CampoDados:
            id: task_title
            hint_text: "Título da tarefa"
            helper_text: "Para editar basta digitar o mesmo título"
            helper_text_mode: "persistent"
            font_size: "18sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.80}
        MDTextField:
            multiline: True
            id: task_description
            hint_text: "Descrição"
            height: max(self.minimum_height, (root.height * 0.2))
            size_hint: (1, None)
            icon_right: "view-list-outline"
            size_hint_x: "0.8"
            font_size: "18sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
        CampoDados:
            id: priority
            helper_text_mode: "persistent"
            helper_text:"Alta = 1, Normal = 2 ou Baixa = 3"
            hint_text: "Prioridade"
            icon_right: "priority-high"
            font_size: "18sp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.50}
        MDRectangleFlatIconButton:
            font_size: "25sp"
            line_color: 0, 0, 0, 0
            text: "ADICIONAR"
            icon: "plus-box-multiple-outline"
            line_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .20}
            on_press:
                app.validate_task_fields()
                
